{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "./src/main/config/", "./node_modules/@types"
    ]
  },
  "include": [
    "./src"
  ],
  "exlude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
