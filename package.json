{
  "name": "13-app-typescript-ead-clean-architecture",
  "version": "1.2.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc",
    "dev": "ts-node src/main/server.ts",
    "up": "npm run build && npm run copy-files && docker-compose up -d",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "typeorm:production": "./node_modules/typeorm/cli.js",
    "copy-files": "copyfiles -u 1 src/main/resources/mail/auth/confirm_email.html  dist/",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests",
    "test:unit": "npm test -- --watch -c jest-unit-config.ts",
    "test:integration": "npm test -- --watch -c jest-integration-config.ts",
    "test:staged": "npm test -- --findRelatedTests ./src",
    "test:ci": "npm test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npx prettier --write src/",
      "npm run test:staged"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/multer": "^1.4.5",
    "@types/multer-s3": "^2.7.9",
    "@types/nodemailer": "^6.4.2",
    "@types/nodemailer-express-handlebars": "^4.0.0",
    "@types/slug": "^5.0.0",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "aws-sdk": "^2.918.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^9.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.6.1",
    "nodemailer-express-handlebars": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "slug": "^5.0.1",
    "typeorm": "^0.2.32",
    "validator": "^13.6.0"
  }
